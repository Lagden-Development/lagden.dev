# External Services
SENTRY_AUTH_TOKEN=sentry_api_key
CONTENTFUL_DELIVERY_API_KEY=contentful_api_key
CONTENTFUL_SPACE_ID=contentful_space_id
CONTENTFUL_ENVIRONMENT=master
BETTERSTACK_UPTIME_API_KEY=betterstack_uptime_api_key

# Cache Configuration (seconds)
CACHE_PROJECTS_LIST=3600          # 1 hour
CACHE_PROJECTS_DETAIL=300         # 5 minutes
CACHE_PEOPLE_LIST=7200            # 2 hours
CACHE_PEOPLE_DETAIL=600           # 10 minutes
CACHE_STATUS=30                   # 30 seconds
CACHE_COMMITS=300                 # 5 minutes
CACHE_TAGS=86400                  # 24 hours
CACHE_SEARCH=300                  # 5 minutes

# Cache Settings
CACHE_MAX_SIZE_MB=50
CACHE_MAX_ENTRIES=1000
ENABLE_CACHE_STATS=true

# System Info Configuration (for /nerds page - minimal overrides)
# Most values are auto-detected from package.json, tsconfig.json, and runtime
# Only configure these if you need to override the auto-detected values

# Optional overrides (uncomment to override auto-detection):
# SYSTEM_FRAMEWORK="Next.js 15"
# SYSTEM_DEPLOYMENT=vercel
# SYSTEM_BUNDLER=webpack
# SYSTEM_ANALYTICS=false

# System Stats (update these to reflect your actual project)
SYSTEM_API_ROUTES=12
SYSTEM_PAGES=18
SYSTEM_COMPONENTS=32